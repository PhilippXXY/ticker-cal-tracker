{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend (Flask)",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "src/app/main.py",
                "FLASK_DEBUG": "1",
                "PYTHONUNBUFFERED": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--port",
                "5001"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Frontend (Vite)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}/frontend",
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "Run Full Stack",
            "configurations": [
                "Backend (Flask)",
                "Frontend (Vite)"
            ],
            "stopAll": true
        }
    ]
}